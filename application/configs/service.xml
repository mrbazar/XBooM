
<container xmlns="http://symfony-project.org/2.0/container">

    <imports>
        <import resource="entitymanager.xml" />
    </imports>

    <services>

        <service id="AclService" class="App\Core\Model\Service\Acl\AclService">
            <argument type="service" id="doctrine.orm.entitymanager" />
            <call method="setResourceClass">
                <argument>\App\Core\Model\Domain\Acl\Resource</argument>
            </call>
        </service>

        <service id="NavigationService" class="App\Core\Model\Service\NavigationService">
            <argument type="service" id="doctrine.orm.entitymanager" />
            <call method="setMenuClass">
                <argument>\App\Core\Model\Domain\Navigation\Menu</argument>
            </call>
        </service>

        <service id="auth" class="Zend_Auth" constructor="getInstance" />

        <service id="auth.adapter" class="Xboom\Auth\Adapter\Doctrine">
            <argument type="service" id="doctrine.orm.entitymanager" />
            <argument>\App\Core\Model\Domain\User</argument>
            <argument>email</argument>

            <call method="setEntityName">
                <argument>\App\Core\Model\Domain\User</argument>
            </call>
            <call method="setIdentityName">
                <argument>email</argument>
            </call>
        </service>

        <service id="AuthService" class="App\Core\Model\Service\AuthService">
            <argument type="service" id="service_container" />
            <argument type="service" id="auth" />
            <argument type="service" id="auth.adapter" />

            <call method="setModelClassPrefix">
                <argument>\App\Core\Model\Domain</argument>
            </call>
            <call method="setModelShortName">
                <argument>User</argument>
            </call>
            <call method="setFormClassPrefix">
                <argument>\App\Core\Model\Form</argument>
            </call>
        </service>

        <service id="UserService" class="App\Core\Model\Service\UserService">
            <argument type="service" id="service_container" />

            <call method="setModelClassPrefix">
                <argument>\App\Core\Model\Domain</argument>
            </call>
            <call method="setModelShortName">
                <argument>User</argument>
            </call>
            <call method="setValidatorClassPrefix">
                <argument>\App\Core\Model\Domain\Validator</argument>
            </call>
            <call method="setFormClassPrefix">
                <argument>\App\Core\Model\Form</argument>
            </call>
        </service>

    </services>

</container>